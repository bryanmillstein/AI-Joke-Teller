{
  "name": "TextToSpeechNodejsStarterApp",
  "version": "1.1.5",
  "description": "A sample nodejs app for Bluemix that use the Text to Speech service",
  "dependencies": {
    "body-parser": "~1.14.1",
    "express": "~4.13.3",
    "express-rate-limit": "^2.0.2",
    "express-secure-only": "^0.2.1",
    "helmet": "^0.15.0",
    "watson-developer-cloud": "^1.0.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watson-developer-cloud/text-to-speech-nodejs.git"
  },
  "author": "IBM Corp.",
  "browserify-shim": {
    "jquery": "global:jQuery"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "contributors": [
    {
      "name": "German Attanasio Ruiz",
      "email": "germanatt@us.ibm.com"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/watson-developer-cloud/text-to-speech-nodejs/issues"
  },
  "scripts": {
    "start": "node app.js",
    "build": "browserify src/index.js | uglifyjs -nc > public/js/index.js",
    "watch": "watchify -v -d -o public/js/index.js src/demo.js"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.12",
    "watchify": "^3.6.1",
    "uglifyjs": "^2.4.10"
  }
}
